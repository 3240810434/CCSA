<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- 顶部轮播图区域 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white" />

    <!-- 轮播图指示器 -->
    <LinearLayout
        android:id="@+id/indicatorLayout"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="-20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@android:color/transparent"/>

    <!-- 功能区 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:padding="15dp">

        <!-- 功能按钮网格 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="10dp">

            <!-- 通知公告 -->
            <LinearLayout
                android:id="@+id/ll_notice"
                style="@style/FunctionButtonStyle">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_notice" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="通知公告"
                    android:textSize="12sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- 物业缴费 -->
            <LinearLayout
                android:id="@+id/ll_property_pay"
                style="@style/FunctionButtonStyle">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_pay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="物业缴费"
                    android:textSize="12sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- 我的缴费 -->
            <LinearLayout
                android:id="@+id/ll_my_payment"
                style="@style/FunctionButtonStyle">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_my_payment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="我的缴费"
                    android:textSize="12sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- 缴费申诉 -->
            <LinearLayout
                android:id="@+id/ll_appeal"
                style="@style/FunctionButtonStyle">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_appeal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="缴费申诉"
                    android:textSize="12sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- 小区投票 -->
            <LinearLayout
                android:id="@+id/ll_vote"
                style="@style/FunctionButtonStyle">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_vote" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="小区投票"
                    android:textSize="12sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- 联系物业 -->
            <LinearLayout
                android:id="@+id/ll_contact_property"
                style="@style/FunctionButtonStyle">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_contact" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="联系物业"
                    android:textSize="12sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- 报修 -->
            <LinearLayout
                android:id="@+id/ll_repair"
                style="@style/FunctionButtonStyle">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_repair" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="报修"
                    android:textSize="12sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- 更多 -->
            <LinearLayout
                android:id="@+id/ll_more"
                style="@style/FunctionButtonStyle">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_more" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="更多"
                    android:textSize="12sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</LinearLayout>
