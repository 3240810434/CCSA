<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:layout_marginBottom="8dp">

    <!-- 缴费周期 -->
    <TextView
        android:id="@+id/tv_period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2024-01"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <!-- 金额、支付方式、支付状态（新增） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="3"> <!-- 权重改为3，新增状态列 -->

        <!-- 金额 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额："
                android:textSize="14sp"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150.00元"
                android:textSize="14sp"
                android:textColor="@color/red"/>
        </LinearLayout>

        <!-- 支付方式 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式："
                android:textSize="14sp"
                android:textColor="@color/gray"/>

            <!-- 修正ID：tv_payment_method → tv_method -->
            <TextView
                android:id="@+id/tv_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- 支付状态（新增） -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态："
                android:textSize="14sp"
                android:textColor="@color/gray"/>

            <!-- 新增状态控件，ID为tv_status -->
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已缴费"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 支付时间、收据编号 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- 支付时间 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付时间："
                android:textSize="14sp"
                android:textColor="@color/gray"/>

            <!-- 修正ID：tv_pay_time → tv_time -->
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-01-05 10:30"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- 收据编号 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收据编号："
                android:textSize="14sp"
                android:textColor="@color/gray"/>

            <!-- 修正ID：tv_receipt_no → tv_receipt -->
            <TextView
                android:id="@+id/tv_receipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAY20240105001"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
